<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    tools:context=".ui.moduleView.ModuleView1"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/title_module_view1"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_title_module_view1"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/loading"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_marginRight="20sp"
            android:text=">"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_module_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:padding="10sp"
        android:orientation="horizontal"
        android:weightSum="3">
        <LinearLayout
            android:layout_marginRight="10sp"
            android:orientation="vertical"
            android:layout_weight="3"
            android:layout_width="fill_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_the_loai_module_view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/loading"/>
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/tv_ten_truyen_module_view1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="@string/loading"
                android:lines="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_mo_ta_module_view1"
                android:textSize="15sp"
                android:text="@string/loading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="3"/>
            <LinearLayout
                android:padding="5sp"
                android:gravity="center"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RatingBar
                        android:id="@+id/ratebar_module_view1"
                        android:layout_margin="5sp"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:numStars="5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_so_luot_rate_module_view1"
                        android:layout_margin="5sp"
                        android:text="So luot rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:id="@+id/bt_doc_truyen_module_view1"
                    android:layout_margin="5sp"
                    app:cardCornerRadius="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:padding="2sp"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@color/teal_200"
                        android:text="xem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:background="@color/black"
            android:layout_weight="2"
            android:layout_width="150sp"
            android:layout_height="225sp"
            app:cardCornerRadius="20sp"
            android:elevation="10dp">
            <ImageView
                android:id="@+id/image_module_view1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="20sp"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>